{
  "functions": {
    "api/**": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "excludeFiles": [
    ".next/**",
    "*.cache/**",
    "node_modules/**",
    "public/**",
    "app/**",
    "src/**/*.{jpg,png,svg}",
    "*.test.js",
    "*.spec.js"
  ]
}