{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    },
    {
      "functions": {
        "api/**": {
          "excludeFiles": "{.next,*.cache,node_modules,public,app}/**"
        }
      }
    }
  ]
}